// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Supplier {
  Bidfood
  Booker
  Adams
}

model Item {
  id        String   @id @default(uuid())
  supplier  Supplier
  item      String
  category  String
  quantity  Int      @default(0)
  price     Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
